<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Skip Button -->
    <TextView
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Skip"
        android:textColor="#1F8CE2"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Onboarding Image -->
    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="TODO"
        android:src="@drawable/animation" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboardingImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Choose Products"
        android:textColor="#000000"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="An easy way to find and choose the products you need for your business or personal needs."
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- Next Button -->
    <TextView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Next"
        android:textColor="#1B85D9"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/animation" />

</RelativeLayout>
